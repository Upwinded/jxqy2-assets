//翠烟门-野外
	
	If ($CuiYanMen2Fighting==1) @Talk1;
	If ($CuiYanMen2Fighting==2) @Talk2;
	FadeOut();
	SaveNpc();
	SaveObj();
	LoadMap("别离村-翠烟门.map");
	LoadNpc("Bie-Cui.npc");
	LoadObj("Bie-Cui.obj");
	SetPlayerPos(2,6);
